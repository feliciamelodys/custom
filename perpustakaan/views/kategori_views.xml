<odoo>
    <record id="perpus_kategori_view_form" model="ir.ui.view">
        <field name="name">Kategori Form</field>
        <field name="model">perpus.kategori</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="kode"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="perpus_kategori_view_tree" model="ir.ui.view">
        <field name="name">Kategori Tree</field>
        <field name="model">perpus.kategori</field>
        <field name="arch" type="xml">
            <tree>
                <field name="kode"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="perpus_kategori_action" model="ir.actions.act_window">
        <field name="name">Kategori</field>
        <field name="res_model">perpus.kategori</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>